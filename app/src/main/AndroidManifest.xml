<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:name=".GwsAutoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GWSAutoforAndroid">

        <activity
            android:name="com.gws.auto.mobile.android.SignInActivity"
            android:theme="@style/Theme.GWSAutoforAndroid"/>

        <activity
            android:name="com.gws.auto.mobile.android.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GWSAutoforAndroid.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.workflow.editor.WorkflowEditorActivity"
            android:exported="false" />
            
        <activity
            android:name=".ui.schedule.ScheduleSettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.GWSAutoforAndroid" />

    </application>

</manifest>
